generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Ubah jadi postgresql
  url      = env("POSTGRES_PRISMA_URL") // Variable otomatis dari Vercel
  directUrl = env("POSTGRES_URL_NON_POOLING") // Variable otomatis dari Vercel
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text // WAJIB: Agar bisa menampung artikel panjang
  image     String?  // URL gambar thumbnail
  createdAt DateTime @default(now())
}

model Portfolio {
  id        String   @id @default(cuid())
  title     String
  image     String
  category  String
  createdAt DateTime @default(now())
}